@model IEnumerable<UserListingViewModel>

@{
    ViewData["Title"] = "Users";
}

<h2>@ViewData["Title"]</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td><a asp-action="UserDetails" asp-route-id="@user.Id">Details</a></td>
            </tr>
        }
    </tbody>
</table>
