@model SpecialListingServiceModel

@{
    ViewData["Title"] = "Special Details";
}

<h2>@ViewData["Title"]</h2>

<h3>@Model.Title</h3>
<p>@Model.Description</p>
<p>Created on: @Model.CreatedOn.ToShortDateString() - Valid: @Model.DaysValid days</p>
<p>Expired on: @Model.CreatedOn.AddDays(Model.DaysValid).ToShortDateString()</p>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id"  class="btn btn-danger">Delete</a>
</p>
<p>
    <a class="back-Link" asp-action="Index">Back</a>
</p>