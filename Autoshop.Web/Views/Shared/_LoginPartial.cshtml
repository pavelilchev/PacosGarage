@using Microsoft.AspNetCore.Identity
@using Autoshop.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li is-active-route asp-controller="Manage" asp-action="Manage">
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">My Profile</a>
            </li>
            <li>
                <button type="submit" class="btn-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li is-active-route asp-controller="Account" asp-action="Register">
            <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li is-active-route asp-controller="Account" asp-action="Login">
            <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
        </li>
    </ul>
}
